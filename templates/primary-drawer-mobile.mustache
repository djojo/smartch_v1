//modification smartch menu admin
require(['jquery', 'core/ajax'], function($, Ajax) {
    $(document).ready(function(){
        
        let service_name = 'theme_remui_get_smartch_role';
        let rolecall = Ajax.call([
            {
                methodname: service_name,
                args: {}
            }
        ]);
        rolecall[0].done(function(response) {
            let data = JSON.parse(response);
            // When menu is ready display menu
            $('#navmenuadminmobile').ready(function() {
                {{! alert(data.rolename); }}
                let url = data.baseurl;


                //on met le lien sur le logo
                var logoMenuLink = document.getElementById("logomenulink");

                if (logoMenuLink) {
                    logoMenuLink.addEventListener("click", function() {
                        window.location.href = url;
                    });
                }

                if(data.rolename == "super-admin"){
                    
                    let html1 = '<a href="'+url+'/theme/remui/views/adminmenu.php" class="nav-link">Panneau d\'administration</a>'
                    $('#navmenuadminmobile').append(html1)
                    let html2 = '<a href="'+url+'/admin/search.php" class="nav-link">Configuration avancée</a>'
                    $('#navmenuadminmobile').append(html2)
                } else if(data.rolename == "manager" || data.rolename == "smalleditingteacher" || data.rolename == "editingteacher"){
                    let html1 = '<a href="'+url+'/theme/remui/views/adminmenu.php" class="nav-link">Panneau d\'administration</a>'
                    $('#navmenuadminmobile').append(html1)
                    {{! let html2 = '<a href="'+url+'/admin/search.php" class="nav-link">configuration avancée</a>'
                    $('#navmenuadmin').append(html2) }}
                }
                let html2 = '<a href="'+url+'/theme/remui/views/profile.php" class="nav-link">Mon profil</a>'
                $('#navmenuadminmobile').append(html2)
            });
        });
    });
});


